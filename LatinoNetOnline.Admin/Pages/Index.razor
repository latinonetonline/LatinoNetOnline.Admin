@page "/"
@inject NavigationManager NavigationManager




<h1>Latino .NET Online App</h1>


<AuthorizeView>
	<NotAuthorized>
		Inicia sesión y no olvides activar las notificaciones!

		<div class="row">
			<div class="alert alert-secondary mt-4" role="alert">
				<RadzenButton Click=@(args => OnClick()) Text="Iniciar Sesión" Icon="account_circle" Style="width: 300px" />
			</div>
		</div>
	</NotAuthorized>
</AuthorizeView>


<RadzenButton Click=@(args => OnClickMeetup()) Text="Meetup" Icon="account_circle" Style="width: 300px" />



@code {

    void OnClick()
    {
        NavigationManager.NavigateTo("authentication/login");

    }

    void OnClickMeetup()
    {
        NavigationManager.NavigateTo("https://secure.meetup.com/es-ES/oauth2/authorize?response_type=token&redirect_uri=https%3A%2F%2F3106643ff988.ngrok.io%2Fredirect&client_id=c2ovp69014iq4mtu4ii4o1mo0h", true);

    }

}

